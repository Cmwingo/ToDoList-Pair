<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>categories</title>
  </head>
  <body>
    <h1>All Categories</h1>
    @if (@Model.Count == 0)
    {
      <p>There are no categories.</p>
    }
    <ul>
      @foreach(var category in Model)
      {
        <li><a href="/categories/@category.GetId()">@category.GetName()</a></li>
      }
    </ul>
    <a href="/categories/new">Add a new category</a>
  </body>
</html>
