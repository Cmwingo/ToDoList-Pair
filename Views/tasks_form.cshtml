<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>tasks</title>
  </head>
  <body>
    <h1>Add a new task</h1>
    <form action="/tasks/new" method="post">
      <label for="task-description">Task description:</label>
      <input type="text" name="task-description" id="task-description">
      <label for="due-date">Due Date(MM/DD/YY):</label>
      <input type="text" name="due-date" id="due-date">
      <select class="" name="category-id">
        @foreach(var category in Model)
        {
          <option value="@category.GetId()">@category.GetName()</option>
        }
      </select>
      <button type="submit">Add new task</button>
    </form>
    <p><a href="/">Back home</a></p>
    <p><a href="/tasks">View all tasks</a></p>
  </body>
</html>
